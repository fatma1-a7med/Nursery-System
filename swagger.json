      }
    },
    "/class": {
      "get": {
        "summary": "Get all classes",
        "description": "Retrieve a list of all classes",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Add a new class",
        "description": "Add a new class to the system",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "supervisor": {
                    "type": "string", 
                    "description": "ID of the supervisor (teacher)"
                  },
                  "children": {
                    "type": "array",
                    "items": {
                      "type": "integer",
                      "format": "int32"
                    },
                    "description": "List of IDs of children assigned to the class"
                  }
                },
                "required": ["name"] 
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Class added successfully"
          }
        }
      }
      
    },
    "/class/child/{id}": {
      "get": {
        "summary": "Get child info by class ID",
        "description": "Retrieve information of children in a specific class by class ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
