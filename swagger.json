{
  "openapi": "3.0.0",
  "info": {
    "title": "Nursery System API",
    "description": "API documentation for Nursery System project",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {

    "/login": {
      "post": {
        "summary": "User login",
        "description": "Authenticate user and generate token for authorization",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },







    "/teachers": {
      "get": {
        "summary": "Get all teachers",
        "description": "Retrieve a list of all teachers",
        "security": [
          {
            "bearerAuth": []
          }
        ]
        ,
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },

      "post": {
        "summary": "Add a new teacher",
        "description": "Add a new teacher to the system",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullname": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["teacher", "supervisor"],
                    "default": "teacher"
                  }
                }
              },
              "encoding": {
                "image": {
                  "contentType": "multipart/form-data"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Teacher added successfully"
          }
        }
      },

      "patch": {
        "summary": "Update a teacher",
        "description": "Update an existing teacher's information",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "string",
                    "format": "ObjectId"
                  },
                  "fullname": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["teacher", "supervisor"]
                  }
                }
              },
              "encoding": {
                "image": {
                  "contentType": "multipart/form-data"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Teacher updated successfully"
          }
        }
      }
      
     
    },
     

    "/teachers/supervisors": {
      "get": {
        "summary": "Get all supervisors",
        "description": "Retrieve a list of all supervisors",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },



    "/teachers/{id}": {
      "get": {
        "summary": "Get teacher by ID",
        "description": "Retrieve details of a specific teacher by ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the teacher to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "delete": {
        "summary": "Delete teacher by ID",
        "description": "Delete a specific teacher by ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the teacher to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Teacher deleted successfully"
          }
        }
      }
    },


    "/child": {
      "get": {
        "summary": "Get all children",
        "description": "Retrieve a list of all children",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },

      "post": {
        "summary": "Add a new child",
        "description": "Add a new child to the system",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullname": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "level": {
                    "type": "string"
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "city": {
                        "type": "string"
                      },
                      "street": {
                        "type": "integer",
                        "format": "int32"
                      },
                      "building": {
                        "type": "integer",
                        "format": "int32"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Child added successfully"
          }
        }
      },
      "patch": {
        "summary": "Update a child",
        "description": "Update an existing child's information",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "fullname": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "level": {
                    "type": "string"
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "city": {
                        "type": "string"
                      },
                      "street": {
                        "type": "integer",
                        "format": "int32"
                      },
                      "building": {
                        "type": "integer",
                        "format": "int32"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Child updated successfully"
          }
        }
      }
      

    },
    "/child/{id}": {
      "get": {
        "summary": "Get child by ID",
        "description": "Retrieve details of a specific child by ID",
        "security": [
          {
            "bearerAuth": []
          }
        ]
        ,
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the child to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "delete": {
        "summary": "Delete child by ID",
        "description": "Delete a specific child by ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the child to delete",
            "schema": {
              "type": "string"
            }
          }
