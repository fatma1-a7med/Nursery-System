{
  "openapi": "3.0.0",
  "info": {
    "title": "Nursery System API",
    "description": "API documentation for Nursery System project",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "User login",
        "description": "Authenticate user and generate token for authorization",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/teachers": {
      "get": {
        "summary": "Get all teachers",
        "description": "Retrieve a list of all teachers",
        
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Add a new teacher",
        "description": "Add a new teacher to the system",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./Model/teacherModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Teacher added successfully"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Update a teacher",
        "description": "Update an existing teacher's information",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./Model/teacherModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Teacher updated successfully"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/teachers/supervisors": {
      "get": {
        "summary": "Get all supervisors",
        "description": "Retrieve a list of all supervisors",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/teachers/{id}": {
      "get": {
        "summary": "Get teacher by ID",
        "description": "Retrieve details of a specific teacher by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the teacher to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/child": {
      "get": {
        "summary": "Get all children",
        "description": "Retrieve a list of all children",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Add a new child",
        "description": "Add a new child to the system",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./Model/childModel/schema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Child added successfully"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/child/{id}": {
      "get": {
        "summary": "Get child by ID",
        "description": "Retrieve details of a specific child by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the child to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/class": {
      "get": {
        "summary": "Get all classes",
        "description": "Retrieve a list of all classes",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Add a new class",
        "description": "Add a new class to the system",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Class"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Class added successfully"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/class/child/{id}": {
      "get": {
        "summary": "Get child info by class ID",
        "description": "Retrieve information of children in a specific class by class ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the class",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/class/teacher/{id}": {
      "get": {
        "summary": "Get supervisor info by class ID",
        "description": "Retrieve information of the supervisor of a specific class by class ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the class",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/class/{id}": {
      "get": {
        "summary": "Get class by ID",
        "description": "Retrieve details of a specific class by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the class to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  }
}
